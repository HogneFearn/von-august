---
import NavBar from '../components/NavBar.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
  />
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon-light.svg" media="(prefers-color-scheme: light)"/>
    <link rel="icon" type="image/svg+xml" href="/favicon-dark.svg" media="(prefers-color-scheme: dark)"/>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <style is:global>
    @font-face {
      font-family: "BradfordLL";
      src:
        url("/fonts/BradfordLL-Italic.woff2") format("woff2"),
        url("/fonts/BradfordLL-Italic.woff") format("woff"),
        url("/fonts/BradfordLL-Italic.otf") format("opentype");
      font-weight: normal;
      font-style: italic;
    }
    .bradford-italic {
      font-family: "BradfordLL", sans-serif !important;
      font-size: 4rem;
      font-style: italic;
    }
    .social-icons a {
      margin: 0 10px;
      color: inherit;
      text-decoration: none;
      font-size: 1rem;
    }
    .social-icons a:hover {
      color: #0073e6; /* Change color on hover */
    }
    .min-h-screen {
      min-height: 100vh;
    }
    .flex-grow {
      flex-grow: 1;
    }
    @media (min-width: 600px) {
      .bradford-italic {
        font-size: 2rem;
      }
      .social-icons a {
        font-size: 1rem;
      }
    }
  </style>
  <body class="container mx-auto bg-black text-white">
    <NavBar />
    <slot />
  <div class="mt-8 text-sm space-y-2 text-center bradford-italic">
    <p>booking: <a href="mailto:leahdenardi@gmail.com">leahdenardi@gmail.com</a></p>
    <p>contact: <a href="mailto:vonaugustproject@gmail.com">vonaugustproject@gmail.com</a></p>
  </div>
</body>
  <footer class="md:text-lg flex flex-col justify-center items-center h-44">
    <div class="social-icons  flex justify-center mt-2">
      <a
        href="https://www.facebook.com/vonaugustproject"
        target="_blank"
        aria-label="Facebook"
      >
        <i class="fab fa-facebook fa-2x"></i>
      </a>
      <a
        href="https://www.instagram.com/_vonaugust"
        target="_blank"
        aria-label="Instagram"
      >
        <i class="fab fa-instagram fa-2x"></i>
      </a>
      <a
        href="https://linktr.ee/vonaugust"
        target="_blank"
        aria-label="Listen"
      >
        <i class="fa-solid fa-tree fa-2x"></i>
      </a>
      <a
        href="https://vonaugust.bandcamp.com/"
        target="_blank"
        aria-label="Bandcamp"
      >
        <i class="fab fa-bandcamp fa-2x"></i>
      </a>
    </div>

    <p class="bradford-italic text-sm md:text-lg">
      Â© von august {new Date().getFullYear()}
    </p>
  </footer>
</html>
